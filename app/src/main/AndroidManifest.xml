<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hardikarora.spotify_1" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hardikarora.spotify_1.activity.ArtistSearchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hardikarora.spotify_1.activity.ArtistTopTracksActivity"
            android:label="@string/title_activity_artist_details" >
        </activity>
        <activity
            android:name="com.hardikarora.spotify_1.activity.SongPlayActivity"
            android:label="@string/title_activity_song_play" >
        </activity>
        <service android:name="com.hardikarora.spotify_1.util.SpotifyPlayerService"/>
    </application>

</manifest>
